{
  "compilerOptions": {
    "target": "es2017",
    "moduleResolution": "Node",
    "experimentalDecorators": true,
    "jsx": "react",
    "strict": false,
    "declaration": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "types": ["vitest/globals"],
    "removeComments": false,
    "strictNullChecks": false,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "paths": {
      "@/*": ["packages/src/*"]
    }
  }
}
